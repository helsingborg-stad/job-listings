{
    "name": "helsingborg-stad/job-listings",
    "description": "Improt available jobs",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Kristoffer Svanmark",
            "email": "kristoffer.svanmark@lexiconitkonsult.se"
        },
        {
            "name": "Sebastian Thulin",
            "email": "sebastian.thulin@helsingborg.se"
        },
        {
            "name": "Nikolas Ramstedt",
            "email": "rikolas.ramstedt@helsingborg.se"
        },
        {
            "name": "Johan Silvergrund",
            "email": "johan.silvergrund@hiq.se"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/helsingborg-stad/acf-export-manager.git"
        }
    ],
    "require": {
        "composer/installers": "~1.0",
        "helsingborg-stad/acf-export-manager": ">=1.0.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra" : {
        "builder": {
            "commands": [
                "npm ci --no-progress --no-audit",
                "npx --yes browserslist@latest --update-db",
                "npm run build",
                "composer install --prefer-dist --no-progress"
            ],
            "removables": [
                ".git",
                ".gitignore",
                ".github",
                "build.php",
                "composer.json",
                "composer.lock",
                "webpack.config.js",
                "node_modules",
                "package-lock.json",
                "package.json"
            ]
        }
    }
}
